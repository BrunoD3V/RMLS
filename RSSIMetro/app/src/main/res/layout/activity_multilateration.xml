<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="d3v.bnb.rssimetro.Activities.MultilaterationActivity">

    <TextView
        android:id="@+id/txtShowPosition"
        android:layout_width="151dp"
        android:layout_height="123dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="88dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPosID" />

    <EditText
        android:id="@+id/edtPosID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="text|textPersonName"
        android:text="Pos ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCalcPos"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="52dp"
        android:onClick="onClickbtnCalcPos"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSaveMultiPos"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickbtnSaveMultiPos"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/btnCalcPos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toEndOf="@+id/btnCalcPos"
        app:layout_constraintTop_toTopOf="@+id/btnCalcPos" />
</android.support.constraint.ConstraintLayout>
